meal(a, r, m, d) :- appetizer(a), main(r, m), val(x, add(3,4)), dessert(d).

main(r, m) :- drink(r), principal(m).
main(r, m) :- drink(r), meat(m).

principal((m, m2)) :- fish(m), fish2(m2).

